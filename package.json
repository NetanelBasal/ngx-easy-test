{
  "name": "spectator-src",
  "license": "MIT",
  "description": "Angular tests made easy",
  "scripts": {
    "ng": "ng",
    "build": "ng build && npm run build:schematics && npm run copy:schematics && npm run copy:readme",
    "build:schematics": "tsc -p projects/spectator/schematics/tsconfig.json",
    "test": "ng test",
    "test:jest": "ng run spectator:test-jest",
    "test:ci": "cross-env NODE_ENV=build npm run test && npm run test:jest",
    "lint": "ng lint",
    "format": "prettier --write \"{projects,src}/**/*.ts\"",
    "commit": "git-cz",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "precommit": "lint-staged",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "copy:readme": "cp README.md dist/spectator",
    "copy:schematics": "cp -r projects/spectator/schematics/src/ dist/spectator/schematics",
    "postbump": "npm run build",
    "release": "cd projects/spectator && standard-version --infile ../../CHANGELOG.md"
  },
  "dependencies": {
    "dom-testing-library": "3.16.0",
    "jquery": "3.4.1"
  },
  "devDependencies": {
    "@angular-builders/jest": "^8.0.4",
    "@angular-devkit/build-angular": "~0.800.0",
    "@angular-devkit/build-ng-packagr": "~0.800.0",
    "@angular/animations": "~8.0.0",
    "@angular/cli": "~8.0.0",
    "@angular/common": "~8.0.0",
    "@angular/compiler": "~8.0.0",
    "@angular/compiler-cli": "~8.0.0",
    "@angular/core": "~8.0.0",
    "@angular/forms": "~8.0.0",
    "@angular/language-service": "~8.0.0",
    "@angular/platform-browser": "~8.0.0",
    "@angular/platform-browser-dynamic": "~8.0.0",
    "@angular/router": "~8.0.0",
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-angular": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@types/jasmine": "~3.3.8",
    "@types/jest": "^24.0.15",
    "@types/node": "~8.9.4",
    "all-contributors-cli": "^4.11.1",
    "codelyzer": "^5.0.0",
    "commitizen": "^2.9.6",
    "core-js": "^2.5.4",
    "cross-env": "^5.1.4",
    "cz-conventional-changelog": "^2.1.0",
    "helpful-decorators": "^1.7.2",
    "husky": "^0.14.3",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^24.8.0",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "lint-staged": "^7.0.2",
    "ng-packagr": "^5.1.0",
    "prettier": "^1.11.1",
    "rxjs": "~6.4.0",
    "schematics-utilities": "^1.1.1",
    "standard-version": "^4.4.0",
    "ts-node": "~7.0.0",
    "tsickle": "^0.35.0",
    "tslib": "^1.9.0",
    "tslint": "~5.15.0",
    "typescript": "~3.4.3",
    "zone.js": "~0.9.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
