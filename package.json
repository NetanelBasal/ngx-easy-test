{
  "name": "spectator-src",
  "license": "MIT",
  "description": "Angular tests made easy",
  "private": true,
  "workspaces": [
    "projects/*"
  ],
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.22.0"
  },
  "scripts": {
    "postinstall": "ngcc",
    "ng": "ng",
    "build": "ng build --configuration production && yarn build:schematics && yarn copy:schematics && yarn copy:docs && yarn copy:bin && yarn downlevel-dts",
    "build:schematics": "tsc -p projects/spectator/schematics/tsconfig.json",
    "test": "ng test",
    "test:jest": "ng run spectator:test-jest",
    "test:ci": "cross-env NODE_ENV=build yarn test && yarn test:jest",
    "lint": "ng lint",
    "format": "prettier --write \"{projects,src}/**/*.ts\"",
    "commit": "git-cz",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "precommit": "lint-staged",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "copy:bin": "cp migrate.js dist/spectator",
    "copy:docs": "cp *.md dist/spectator",
    "copy:schematics": "cp -r projects/spectator/schematics/src/ dist/spectator/schematics",
    "downlevel-dts": "downlevel-dts ./dist/spectator ./dist/spectator/ts3.4",
    "postbump": "yarn build",
    "release": "cd projects/spectator && standard-version --infile ../../CHANGELOG.md",
    "release:dry": "cd projects/spectator && standard-version --infile ../../CHANGELOG.md --dry-run"
  },
  "devDependencies": {
    "karma-jasmine-html-reporter": "1.7.0",
    "karma-coverage-istanbul-reporter": "3.0.3",
    "@angular-builders/jest": "12.1.0",
    "@angular-devkit/build-angular": "^12.1.1",
    "@angular-devkit/schematics": "^12.1.1",
    "@angular/animations": "^12.1.1",
    "@angular/cli": "^12.1.1",
    "@angular/common": "^12.1.1",
    "@angular/compiler": "^12.1.1",
    "@angular/compiler-cli": "^12.1.1",
    "@angular/core": "^12.1.1",
    "@angular/cdk": "^12.1.2",
    "@angular/forms": "^12.1.1",
    "@angular/language-service": "^12.1.1",
    "@angular/platform-browser": "^12.1.1",
    "@angular/platform-browser-dynamic": "^12.1.1",
    "@angular/router": "12.1.1",
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-angular": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@types/jasmine": "3.8.1",
    "@types/jest": "26.0.24",
    "@types/node": "16.3.1",
    "all-contributors-cli": "^6.19.0",
    "codelyzer": "^6.0.0",
    "core-js": "^3.9.1",
    "cross-env": "^5.1.4",
    "cz-conventional-changelog": "^3.3.0",
    "downlevel-dts": "0.7.0",
    "git-cz": "^4.7.6",
    "helpful-decorators": "^2.1.0",
    "husky": "^4.3.8",
    "jasmine-core": "3.8.0",
    "jasmine-spec-reporter": "7.0.0",
    "jest": "27.0.6",
    "karma": "6.3.4",
    "karma-chrome-launcher": "3.1.0",
    "karma-jasmine": "4.0.1",
    "lint-staged": "^10.5.3",
    "ng-packagr": "12.1.1",
    "prettier": "2.3.2",
    "rxjs": "6.6.3",
    "standard-version": "^9.1.0",
    "ts-node": "10.1.0",
    "tslint": "~6.1.0",
    "typescript": "4.3.5",
    "zone.js": "0.11.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
