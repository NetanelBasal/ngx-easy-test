{
  "name": "spectator-src",
  "license": "MIT",
  "description": "Angular tests made easy",
  "scripts": {
    "ng": "npx ng",
    "start": "npx ng serve",
    "build": "npx ng build",
    "test": "npx ng test",
    "test:jest": "npx ng run spectator-app:test-jest",
    "test:jest:watch": "npx ng run spectator-app:test-jest --watch",
    "lint": "npx ng lint",
    "e2e": "npx ng e2e",
    "format": "npx prettier --write \"{projects,src}/**/*.ts\"",
    "commit": "npx git-cz",
    "commitmsg": "npx commitlint -e $GIT_PARAMS",
    "precommit": "npx lint-staged",
    "contributors:add": "npx all-contributors add",
    "contributors:generate": "npx all-contributors generate",
    "test:ci": "npx cross-env NODE_ENV=build npm run test && npm run test:jest",
    "build:lib": "npx ng build spectator && npm run build:schematics && npm run copy:schematics && npm run copy:readme",
    "build:schematics": "tsc -p projects/spectator/schematics/tsconfig.json",
    "copy:readme": "cp README.md dist/spectator",
    "copy:schematics": "cp -r projects/spectator/schematics/src/ dist/spectator/schematics",
    "postbump": "npm run build:lib",
    "release": "cd projects/spectator && standard-version --infile ../../CHANGELOG.md"
  },
  "dependencies": {
    "@angular/animations": "~7.0.0",
    "@angular/common": "~7.0.0",
    "@angular/compiler": "~7.0.0",
    "@angular/core": "~7.0.0",
    "@angular/forms": "~7.0.0",
    "@angular/http": "~7.0.0",
    "@angular/platform-browser": "~7.0.0",
    "@angular/platform-browser-dynamic": "~7.0.0",
    "@angular/router": "~7.0.0",
    "core-js": "^2.5.4",
    "dom-testing-library": "3.16.0",
    "jquery": "3.4.1",
    "helpful-decorators": "^1.7.2",
    "rxjs": "~6.3.3",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-builders/jest": "^7.4.4",
    "@angular-devkit/build-angular": "^0.13.7",
    "@angular-devkit/build-ng-packagr": "~0.10.0",
    "@angular-devkit/core": "^7.3.1",
    "@angular-devkit/schematics": "^7.3.1",
    "@angular/cli": "~7.0.3",
    "@angular/compiler-cli": "^7.2.11",
    "@angular/language-service": "~7.0.0",
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-angular": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/jest": "^24.0.15",
    "@types/node": "~8.9.4",
    "all-contributors-cli": "^4.11.1",
    "codelyzer": "~4.5.0",
    "commitizen": "^2.9.6",
    "cross-env": "^5.1.4",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^24.8.0",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-mocha-reporter": "^2.2.5",
    "lint-staged": "^7.0.2",
    "ng-packagr": "^4.2.0",
    "path": "^0.12.7",
    "prettier": "^1.11.1",
    "puppeteer": "^1.2.0",
    "schematics-utilities": "^1.1.1",
    "standard-version": "^4.4.0",
    "sync-json": "^1.0.2",
    "ts-node": "~7.0.0",
    "tsickle": ">=0.29.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "typescript": "~3.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
